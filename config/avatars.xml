<?xml version="1.0" encoding="ISO-8859-1"?>

<screensaver name="avatars" _label="Avatars">

	<command arg="-root"/>

	<number id="show" type="slider" arg="-show %"
		_label="Showtime" _low-label="Short" _high-label="Long"
		low="1" high="60" default="6"/>

	<number id="delay" type="slider" arg="-delay %"
		_label="Blanktime" _low-label="Short" _high-label="Long"
		low="1" high="60" default="1"/>

	<number id="delay" type="slider" arg="-delay %"
		_label="Fadetime" _low-label="Short" _high-label="Long"
		low="1" high="10" default="1"/>

	<select id="image">
		<option id="penguin" _label="Penguin"/>
		<option id="danrl" _label="Alien" arg-set="-image 1"/>
		<option id="yourlogo" _label="Logo" arg-set="-image 2"/>
	</select>

	<_description>
A simple, cpu-friendly screensaver.

Written by Dan Luedtke; 2011.
	</_description>
</screensaver>
